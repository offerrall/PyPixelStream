<FilterProperties>:
    BoxLayout:
        id: filter_properties
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(30)
            Label:
                text: "Name"
                halign: 'left'
                text_size: self.width, None 
            TextInput:
                id: filter_name_input
                multiline: False
                on_text: root.update_name()